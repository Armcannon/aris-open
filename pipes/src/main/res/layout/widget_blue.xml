<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="184dp">

    <RelativeLayout
        android:id="@+id/date_background"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/blue_date_background">

        <ImageView
            android:id="@+id/date_arc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/blue_date_arc" />

        <TextView
            android:id="@+id/date_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="APRIL"
            android:textColor="#04FCF2"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/date_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:text="24"
            android:textColor="#04FCF2"
            android:textSize="46dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="14dp"
        android:orientation="vertical">

        <com.ss.widget.blue.BoundaryTextView
            android:id="@+id/time"
            android:layout_width="120dp"
            android:layout_height="23dp"
            android:gravity="right"
            android:text="13: 17: 12"
            android:textColor="#04FCF2"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/date_weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Tuesday"
            android:textColor="#04FCF2"
            android:textSize="12dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/grid_background"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="190dp"
        android:background="@drawable/blue_bcg_grid">

        <TextView
            android:id="@+id/grid_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="14%"
            android:textColor="#04FCF2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/grid_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:text="CHARGING"
            android:textColor="#04FCF2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:text="POWER"
            android:textColor="#04FCF2"
            android:textSize="11dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentRight="true"
        android:layout_margin="6dp">

        <ImageView
            android:id="@+id/more_background_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/blue_more_1" />

        <ImageView
            android:id="@+id/more_background_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/blue_more_2" />

        <ImageView
            android:id="@+id/more_background_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/blue_more_3" />

    </RelativeLayout>

</RelativeLayout>
